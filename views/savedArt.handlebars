{{> addNote}}
<div class="jumbotron">
    <div class="container">
	<h1>Mongo Scraper</h1>
	<p>Look through all the saved artciles, and notes for each one. You can delete any article or note, or add your own note to an article.</p>
    </div>
</div>

<div class="panel panel-default">
    {{#each savedArticles}}
    <div class="panel-body">
	<p class="title">{{this.title}}</p>
	<br/>
	<a class="link" href="{{this.link}}">{{this.link}}</a>
	<br/>
	<form>
	    <button type="button" id="artNotes" class="btn btn-default" data-toggle="modal" href="#addNotes" value="{{this.id}}">Article Notes</button>
	    <button id="deleteArt" class="btn btn-default" value="{{this.id}}">Delete Article</button>
	</form>
    </div>
    
    {{/each}}
</div>
